    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "supertest": "^7.2.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
