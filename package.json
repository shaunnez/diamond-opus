{
  "name": "diamond-platform",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:api": "npm run dev -w @diamond/api",
    "dev:scheduler": "npm run dev -w @diamond/scheduler",
    "dev:worker": "npm run dev -w @diamond/worker",
    "dev:consolidator": "npm run dev -w @diamond/consolidator",
    "build": "npm run build -w @diamond/shared && npm run build -w @diamond/database && npm run build -w @diamond/nivoda && npm run build -w @diamond/pricing-engine && npm run build -w @diamond/api && npm run build -w @diamond/scheduler && npm run build -w @diamond/worker && npm run build -w @diamond/consolidator",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext .ts",
    "swagger": "npm run swagger -w @diamond/api",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
