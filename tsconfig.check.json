{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitOverride": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@diamond/shared": ["packages/shared/src/index.ts"],
      "@diamond/database": ["packages/database/src/index.ts"],
      "@diamond/feed-registry": ["packages/feed-registry/src/index.ts"],
      "@diamond/nivoda": ["packages/nivoda/src/index.ts"],
      "@diamond/demo-feed": ["packages/demo-feed/src/index.ts"],
      "@diamond/pricing-engine": ["packages/pricing-engine/src/index.ts"],
      "@diamond/api": ["packages/api/src/index.ts"]
    }
  },
  "include": ["packages/*/src/**/*.ts", "apps/*/src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist/**",
    "**/__tests__/**",
    "**/apps/dashboard/**",
    "**/apps/storefront/**"
  ]
}
