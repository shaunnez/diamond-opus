# Database (Supabase)
DATABASE_HOST=db.supabase.co
DATABASE_PORT=5432
DATABASE_NAME=postgres
DATABASE_USERNAME=user
DATABASE_PASSWORD=pass

# Database Connection Pooling (per-service tuning)
# PG_POOL_MAX=2
# PG_IDLE_TIMEOUT_MS=30000
# PG_CONN_TIMEOUT_MS=10000

# Nivoda API
NIVODA_ENDPOINT=https://intg-customer-staging.nivodaapi.net/api/diamonds
NIVODA_USERNAME=testaccount@sample.com
NIVODA_PASSWORD=staging-nivoda-22
# Set to 'true' to exclude fields that cause GraphQL enum errors on staging
# (clarity, floInt, floCol, labgrown_type)
# NIVODA_DISABLE_STAGING_FIELDS=true

# Azure Services
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
AZURE_SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://...

# Azure API Trigger (for dashboard â†’ scheduler job trigger)
# AZURE_SUBSCRIPTION_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# AZURE_RESOURCE_GROUP=diamond-staging-rg
# AZURE_SCHEDULER_JOB_NAME=diamond-staging-scheduler

# API Configuration
PORT=3000
HMAC_SECRETS={"shopify":"secret1","internal":"secret2"}

# Alerts (Resend) - used by worker and consolidator
